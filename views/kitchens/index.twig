{% extends "/layouts/app.twig" %}

{% block body %}
	<div id="content" class="flex bg-bit-gray flex-col items-center h-full ">
		<h1 class="font-bold text-2xl my-6">kitchens</h1>
		<table class=" bg-white drop-shadow-xl h-2/6 w-7/12 ">
			<tbody>
				<tr class="text-slate-500 border border-x-0 border-t-0 border-slate-300 bg-slate-200">
					<th class="" align="left">
						<p class="pl-3">Name</p>
					</th>
					{% for kitchen in kitchens %}
						<tr class="border-x-0  border border-slate-100">
							<td>
								<a class=" pl-3 underline" href="/kitchen/show&id={{ kitchen.id }}">{{ kitchen.name}}</a>
							</td>
						</tr>
					{% endfor %}
				</tr>
			</tbody>
		</table>
	</div>

{% endblock %}
