{% extends "/layouts/app.twig" %}

{% block body %}
	<div id="content" class="flex bg-bit-gray flex-col items-center h-full ">
		<h1 class=" font-bold text-2xl my-6">kitchens</h1>
		<a class="font-semibold text-lg rounded-md w py-1 px-3.5 bg-bit-blue  text-white" href="/kitchen/edit&id={{kitchen.id}}">edit kitchen</a>
		<table class="bg-white drop-shadow-xl my-8 w-4/6">
			<tbody>
				<tr aria-rowspan="0" class="py-2 bg-slate-200 text-slate-500 border border-x-0 border-t-0 border-slate-300">
					<th class="py-2 px-3" align="left">{{ kitchen.name }}</th>
				</tr>
				<tr class='border-x-0  border border-slate-300'>
					<td class="py-2 px-3 justify-between flex">
						<p class="w-4/5">description</p>
						<p>{{ kitchen.description }}</p>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
